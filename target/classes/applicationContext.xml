<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="cartRepository" class="com.evozon.repository.impl.CartRepositoryImpl"></bean>

    <bean name="productRepository" class="com.evozon.repository.impl.ProductRepositoryImpl"></bean>

    <bean name="productService" class="com.evozon.service.impl.ProductServiceImpl">
        <constructor-arg index="0" ref="productRepository"></constructor-arg>
    </bean>

    <bean name="cartService" class="com.evozon.service.impl.CartServiceImpl">
        <constructor-arg index="0" ref="cartRepository"></constructor-arg>
        <constructor-arg index="1" ref="productService"></constructor-arg>
    </bean>


</beans>